---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Bot Discord révolutionnaire pour la gestion de projets. Organisez vos équipes et boostez votre productivité." } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#5865F2" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="keywords" content="bot discord, gestion projet, organisation équipe, productivité, ProjectBot, discord bot, projet collaboratif, tâches, kanban" />
    <meta name="author" content="ProjectBot Team" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="French" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://projectbot.fr/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://projectbot.fr/images/og-image.jpg" />
    <meta property="og:site_name" content="ProjectBot" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://projectbot.fr/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://projectbot.fr/images/twitter-image.jpg" />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://projectbot.fr/" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Import global styles -->
    <style>
      @import '../styles/global.css';
    </style>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "ProjectBot",
        "description": "Bot Discord révolutionnaire pour la gestion de projets et l'organisation d'équipes",
        "url": "https://projectbot.fr",
        "applicationCategory": "ProductivityApplication",
        "operatingSystem": "Discord",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "EUR"
        },
        "creator": {
          "@type": "Organization",
          "name": "ProjectBot Team"
        },
        "datePublished": "2024",
        "inLanguage": "fr",
        "featureList": [
          "Gestion de projets avancée",
          "Organisation d'équipes",
          "Système de tâches Kanban",
          "Notifications intelligentes",
          "Tableaux de bord en temps réel",
          "Intégration Discord native"
        ]
      }
    </script>
  </head>
  <body class="bg-gray-900 text-white font-inter antialiased">
    <!-- Skip to main content -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
      Aller au contenu principal
    </a>
    
    <!-- Scroll progress indicator -->
    <div id="scroll-progress" class="fixed top-0 left-0 h-1 bg-gradient-to-r from-blue-500 to-purple-500 z-50 transition-all duration-300 w-0"></div>
    
    <slot />
    
    <script>
      // Scroll progress indicator
      function updateScrollProgress() {
        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        const progressBar = document.getElementById('scroll-progress');
        if (progressBar) {
          progressBar.style.width = scrolled + '%';
        }
      }
      
      window.addEventListener('scroll', updateScrollProgress, { passive: true });
    </script>
  </body>
</html>
